{
  "name": "ads-webapp-baseline",
  "version": "1.0.0",
  "description": "The baseline asset for web applications in Appirio Digital Studios",
  "main": "build/index.js",
  "author": "Eric Nograles <enograles@appirio.com>",
  "private": true,
  "engines": {
    "node": "8.1.4"
  },
  "dependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-inline-environment-variables": "^0.1.1",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "bcrypt": "^1.0.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "glob": "^7.1.2",
    "js-yaml": "^3.9.1",
    "jsonwebtoken": "^7.4.2",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "next": "beta",
    "next-redux-wrapper": "^1.3.2",
    "node-sass": "^4.5.3",
    "passport": "^0.3.2",
    "passport-saml": "^0.15.0",
    "pg": "^7.1.0",
    "postcss-easy-import": "^2.1.0",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redis": "^2.7.1",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "sequelize": "^4.4.2",
    "swagger-express-mw": "^0.7.0",
    "winston": "^2.3.1"
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "build:transpile": "./node_modules/.bin/babel src -d build",
    "build:copy_client": "cp -R ./src/client/static ./build/client/static &&  cp -R ./src/client/styles ./build/client/styles",
    "build:copy_swagger": "cp -R ./src/api/swagger ./build/api && cp -R ./src/config ./build",
    "build:next": "cd build/client && ../../node_modules/.bin/next build && cd ../..",
    "build:start_transpiled": "cd build && node index.js",
    "start": "npm run build:transpile && npm run build:copy_client && npm run build:next && npm run build:copy_swagger && npm run build:start_transpiled",
    "precommit": "lint-staged",
    "develop": "cd src && ../node_modules/.bin/nodemon --inspect=5858 --nolazy -r babel-register -w index.js",
    "swagger:edit": "swagger_swagger_fileName=src/api/swagger/swagger.yaml swagger project edit",
    "test": "./node_modules/.bin/jest",
    "test:watch": "./node_modules/.bin/jest --watch"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "enzyme": "^2.9.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "react-test-renderer": "^15.6.1"
  }
}
